@model DeviceModel
@Html.AntiForgeryToken()

@{
    ViewBag.Title = "Register your device";
    Layout = "_Layout";
}

<h2>Register your Device</h2>

<form asp-controller="Device" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Type">Device Type</label>
        <input asp-for="Type" class="form-control" placeholder="Enter device type ...">
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Register</button>
</form>